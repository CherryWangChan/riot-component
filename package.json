{
  "name": "riot-component",
  "version": "0.0.1",
  "description": "some components base on riot.js",
  "main": "./dist/riot-component.cjs.js",
  "devDependencies": {
    "@types/react": "^0.14.55",
    "@types/react-dom": "^0.14.20",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "source-map-loader": "^0.1.5",
    "typescript": "^2.1.4",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "test": "npm run eslint && npm run karma",
    "eslint": "eslint src/*.js",
    "karma": "karma start test/karma.conf.js",
    "doc": "gulp doc",
    "build": "gulp build",
    "watch": "gulp watch",
    "server": "gulp server",
    "start": "gulp server:watch",
    "start:build": "gulp server:watch:build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fsy0718/riot-component.git"
  },
  "keywords": [
    "riot",
    "riot-component",
    "component",
    "riot-calendar"
  ],
  "author": "fsy0718 <fsy0718@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fsy0718/riot-component/issues"
  },
  "homepage": "https://github.com/fsy0718/riot-component#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "./validate-commit-msg.js"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "build",
        "ci"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  }
}
